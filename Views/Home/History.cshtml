@model IEnumerable<ReagentBarcode.Models.BarcodeHistory>
@{
    ViewData["Title"] = "Barcode History";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h1 class="h3 text-primary mb-1">
                                <i class="fas fa-history me-3"></i>Barcode History
                            </h1>
                            <p class="text-muted mb-0">View all generated reagent barcodes</p>
                        </div>
                        <div>
                            <a href="@Url.Action("Index")" class="btn btn-primary me-2">
                                <i class="fas fa-plus me-1"></i>Generate New
                            </a>
                            @if (Model.Any())
                            {
                                <form method="post" asp-action="ClearHistory" class="d-inline"
                                      onsubmit="return confirm('Are you sure you want to clear all history?')">
                                    <button type="submit" class="btn btn-outline-danger">
                                        <i class="fas fa-trash me-1"></i>Clear History
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Success/Error Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="row mb-3">
            <div class="col-12">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            </div>
        </div>
    }

    @if (!Model.Any())
    {
        <!-- Empty State -->
        <div class="row">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-barcode fa-4x text-muted mb-4"></i>
                        <h4 class="text-muted">No Barcodes Generated Yet</h4>
                        <p class="text-muted mb-4">Start by generating your first reagent barcode</p>
                        <a href="@Url.Action("Index")" class="btn btn-primary btn-lg">
                            <i class="fas fa-plus me-2"></i>Generate First Barcode
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- History Table -->
        <div class="row">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-header bg-light">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-list me-2"></i>Generated Barcodes (@Model.Count())
                            </h5>
                            <div class="input-group" style="width: 300px;">
                                <span class="input-group-text"><i class="fas fa-search"></i></span>
                                <input type="text" class="form-control" id="searchInput" placeholder="Search by chemical...">
                            </div>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0" id="historyTable">
                                <thead class="table-dark">
                                    <tr>
                                        <th><i class="fas fa-hashtag me-1"></i>ID</th>
                                        <th><i class="fas fa-flask me-1"></i>Chemical</th>
                                        <th><i class="fas fa-barcode me-1"></i>Barcode</th>
                                        <th><i class="fas fa-prescription-bottle me-1"></i>Type</th>
                                        <th><i class="fas fa-vial me-1"></i>Rgt</th>
                                        <th><i class="fas fa-hashtag me-1"></i>Lot</th>
                                        <th><i class="fas fa-list-ol me-1"></i>Serial</th>
                                        <th><i class="fas fa-calendar-alt me-1"></i>Expiry</th>
                                        <th><i class="fas fa-clock me-1"></i>Generated</th>
                                        <th><i class="fas fa-cogs me-1"></i>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td>
                                                <span class="badge bg-primary">@item.Chem</span>
                                            </td>
                                            <td>
                                                <code class="font-monospace small">@item.BarcodeNumber</code>
                                            </td>
                                            <td>@item.BottleType</td>
                                            <td>
                                                <span class="badge bg-@(item.RgtType == "R1" ? "success" : "info")">@item.RgtType</span>
                                            </td>
                                            <td>@item.LotNumber</td>
                                            <td>@item.SerialNumber</td>
                                            <td>@item.FormattedExpDate</td>
                                            <td>
                                                <small class="text-muted">@item.FormattedGeneratedAt</small>
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <button class="btn btn-outline-primary" onclick="copyBarcode('@item.BarcodeNumber')"
                                                            title="Copy Barcode">
                                                        <i class="fas fa-copy"></i>
                                                    </button>
                                                    <button class="btn btn-outline-info" onclick="showDetails(@item.Id)"
                                                            title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Details Modal -->
<div class="modal fade" id="detailsModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-info-circle me-2"></i>Barcode Details
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="modalBody">
                <!-- Content will be loaded here -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Search functionality
        document.getElementById('searchInput').addEventListener('keyup', function() {
            const filter = this.value.toLowerCase();
            const rows = document.querySelectorAll('#historyTable tbody tr');

            rows.forEach(row => {
                const chemical = row.cells[1].textContent.toLowerCase();
                if (chemical.includes(filter)) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        });

        function copyBarcode(barcode) {
            navigator.clipboard.writeText(barcode).then(function() {
                // Simple feedback
                const btn = event.target.closest('button');
                const originalIcon = btn.innerHTML;
                btn.innerHTML = '<i class="fas fa-check"></i>';
                btn.classList.remove('btn-outline-primary');
                btn.classList.add('btn-success');

                setTimeout(() => {
                    btn.innerHTML = originalIcon;
                    btn.classList.remove('btn-success');
                    btn.classList.add('btn-outline-primary');
                }, 1000);
            });
        }

        function showDetails(id) {
            // Find the item data
            const row = document.querySelector(`tr:has(td:first-child:contains("${id}"))`);
            if (row) {
                const cells = row.cells;
                const detailsHtml = `
                    <div class="row">
                        <div class="col-md-6">
                            <h6>Chemical Information</h6>
                            <table class="table table-sm">
                                <tr><td class="bg-light fw-bold">Chemical:</td><td>${cells[1].textContent}</td></tr>
                                <tr><td class="bg-light fw-bold">Bottle Type:</td><td>${cells[3].textContent}</td></tr>
                                <tr><td class="bg-light fw-bold">Reagent Type:</td><td>${cells[4].textContent}</td></tr>
                                <tr><td class="bg-light fw-bold">Lot Number:</td><td>${cells[5].textContent}</td></tr>
                                <tr><td class="bg-light fw-bold">Serial Number:</td><td>${cells[6].textContent}</td></tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <h6>Barcode Information</h6>
                            <table class="table table-sm">
                                <tr><td class="bg-light fw-bold">Barcode:</td><td><code>${cells[2].textContent}</code></td></tr>
                                <tr><td class="bg-light fw-bold">Expiry Date:</td><td>${cells[7].textContent}</td></tr>
                                <tr><td class="bg-light fw-bold">Generated:</td><td>${cells[8].textContent}</td></tr>
                            </table>
                        </div>
                    </div>
                `;

                document.getElementById('modalBody').innerHTML = detailsHtml;
                new bootstrap.Modal(document.getElementById('detailsModal')).show();
            }
        }

        // Auto-dismiss alerts after 5 seconds
        setTimeout(function() {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
    </script>
}
